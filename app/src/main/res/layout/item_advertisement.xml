<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="advertisement"
            type="woowacourse.movie.presentation.movies.ui.MoviesUiModel.AdvertisementUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/advertisement_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:imgRes="@{advertisement.advertisementImage}"
            app:layout_constraintDimensionRatio="360:96"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img_advertisement" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
